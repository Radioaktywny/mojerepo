        <%=    @article.title %>
    </h1>
    
    <hr/>
    <b>
        
        
                <%= @article.text %>
 </b>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
     <%= comment.created_at.strftime('%F') %>
    <strong><%= comment.commenter %></strong>
    
  
   --
    <%= comment.body %>
  </p>
<% end %>
    <h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
        
   
